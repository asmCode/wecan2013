#version 400

layout( location = 0 ) out vec4 FragColor;

varying vec3 o_normal;
varying vec3 o_lightDirection;
varying vec3 o_eyeDirection;
varying vec3 o_halfVector;

void main()
{
	float diffValue = max(dot(normalize(o_lightDirection), normalize(o_normal)), 0.2);
	float specValue = pow(max(dot(normalize(o_halfVector), normalize(o_normal)), 0), 16.0);
		
	FragColor =
		vec4(diffValue, diffValue, diffValue, 1.0) +
		vec4(specValue, specValue, specValue, 1.0);
}

